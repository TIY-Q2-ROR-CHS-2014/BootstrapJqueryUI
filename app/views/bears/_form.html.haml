= nested_form_for @bear do |f|
  - if @bear.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bear.errors.count, "error")} prohibited this bear from being saved:"
      %ul
        - @bear.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.fields_for :honeys do |honey_form|
      = honey_form.text_field :name
      = honey_form.link_to_remove "Remove this honey"
    %p= f.link_to_add "Add a honey", :honeys
  .actions
    = f.submit 'Save'
